{{!-- main feed --}}

<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>Scrapin' Some Footy News</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if Article}} {{#each Article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <div class="col-md-6">
                    <div class="widget-area no-padding blank">
                        <div class="status-upload">
                            <form>
                                <textarea placeholder="What are you doing right now?"></textarea>
                                <button type="button" class="btn btn-success addComment" data-toggle="modal" data-target="#commentModal{{this._id}}" data-id="{{this._id}}">Leave a Comment</button>
                                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button> {{!need to move this}}
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <button type="button" class="btn btn-success saveFav"> Favorite Article</button>
        </div>
    </div>
    {{/each}} {{else}}
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Our groundscrew couldn't scrape any new articles.</h4>
        </div>
    </div>
    {{/if}}
</div>
</div>